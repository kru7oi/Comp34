<Window x:Class="Элементы_компоновки.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Элементы_компоновки"
        mc:Ignorable="d"
        Title="Главное окно" Height="720" Width="1280">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        
        <!-- Меню приложения -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="150" />
                <RowDefinition Height="20" />
                <RowDefinition Height="60" />
                <RowDefinition Height="20" />
                <RowDefinition Height="60" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Image Source="/Resources/Images/logo.png" />

                <TextBlock Grid.Column="2" VerticalAlignment="Center" Text="EmployeeApp" FontSize="25"/>
            </Grid>

            <Button x:Name="OpenEmployeesBtn" Grid.Row="2" Grid.Column="0" FontSize="20" Content="Сотрудники" Click="OpenEmployeesBtn_Click"/>

            <Button x:Name="OpenOrdersBtn" Grid.Row="4" Grid.Column="0" FontSize="20" Content="Заказы" Click="OpenOrdersBtn_Click"/>

            <Button x:Name="ExitAppBtn" Grid.Row="6" Grid.Column="0" FontSize="20" Content="Выход" Click="ExitAppBtn_Click"/>
        </Grid>

        <!-- Основная часть приложения -->
        <Frame Name="MainFrm" Grid.Column="2" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
  
<!-- WPF - технология для построения графических интерфейсов, которая входит в экосистему .NET-->

<!--
Окно делится на 2 части: .xaml и .xaml.cs:
    - .xaml (графическая часть окна)
    - .xaml.cs (логическая часть окна)
-->

<!--
Файл App.xaml - это стартовая точка приложения. В нём можно изменить стартовое окно
-->

<!--
Компоновка - это процесс размещения элементов внутри окна, а также их настройка и позиционирование.
    
Для компоновки элементов в WPF существуют специальные элементы:
    - Grid;
    - StackPanel;
    - WrapPanel;
    - UniformGrid;
    - Canvas.
    
При компоновке необходимо придерживаться следующих принципов:
    - нежелательно указывать явные размеры для элементов (за исключением минимальных и максимальных). Размеры должны определяться элементами компоновки;
    - нежелательно указывать координаты или позицию для элементов. Позиция элементов должна определяться элементами компоновки. При сложной структуре дизайна можно разбить элемент компоновки другим элементом компоновки.
    
1) Элемент компоновки Grid. Представляет собой таблицу в которой есть строки и столбцы. Для определения строк используется свойство RowDefinitions, а для столбцов - ColumnDefinitions. 
-->
    
<!-- Страничная навигация -->
    
<!-- 
    В WPF страничная навигация позволяет организовывать приложение таким образом, чтобы пользователь мог перемещаться между различными страницами интерфейса, аналогично веб-приложениям или сайтам.
    
    Она основана на на концепции элементов Frame и Page.
    
    Frame - это контейнер, способный загружать и отображать страница (Page) и вести журнал навигации (история).
    
    Свойство NavigationUIVisibility отвечает за видимость журнала навигации, имеет 3 свойства: automatic, hidden, visible
-->
