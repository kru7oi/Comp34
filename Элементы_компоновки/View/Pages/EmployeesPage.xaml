<Page x:Class="Элементы_компоновки.View.Pages.EmployeesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Элементы_компоновки.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="664" d:DesignWidth="940"
      Title="Сотрудники">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="20" />
            <RowDefinition Height="60" />
            <RowDefinition Height="20" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Button Name="AddEmployeeBtn" Content="Добавить" Click="AddEmployeeBtn_Click"/>

            <Button Name="EditEmployeeBtn" Grid.Column="2" Content="Редактировать" Click="EditEmployeeBtn_Click"/>

            <Button Name="RemoveEmployeeBtn" Grid.Column="4" Content="Удалить" Click="RemoveEmployeeBtn_Click"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Поиск:"/>
            
            <TextBox Name="SearchTb" Grid.Column="2" TextChanged="SearchTb_TextChanged"/>
            <!-- TextChanged - событие для отслеживания ввода/удаления символов в элемент TextBox -->

            <TextBlock Grid.Column="4" Text="Фильтр:"/>

            <ComboBox Name="FilterCmb" Grid.Column="6"/>
        </Grid>

        <ListView Name="EmployeesLv" Grid.Row="4">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Полное имя" DisplayMemberBinding="{Binding Fullname}"/>
                    <GridViewColumn Header="Дата рождения" DisplayMemberBinding="{Binding DateOfBirth, StringFormat=d MMMM yyyy г., ConverterCulture=ru-RU}"/>
                    <GridViewColumn Header="Телефон" DisplayMemberBinding="{Binding Phone, StringFormat=#(###) ### ## ##}"/>
                    <GridViewColumn Header="Почта" DisplayMemberBinding="{Binding Email}"/>
                    <GridViewColumn Header="Отдел" DisplayMemberBinding="{Binding Department.Name}"/>
                    <GridViewColumn Header="Должность" DisplayMemberBinding="{Binding Position.Name}"/>
                    <GridViewColumn Header="Дата трудоустройства" DisplayMemberBinding="{Binding DateOfEmployment, StringFormat=d MMMM yyyy г., ConverterCulture=ru-RU}"/>
                    <GridViewColumn Header="Отпуск" DisplayMemberBinding="{Binding VacationText}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
    
    <!-- CRUD-операции 
    CRUD - набор операций для создания (Create), чтения (Read), обновления (Update ) и удаления данных (Delete).
    -->
</Page>
